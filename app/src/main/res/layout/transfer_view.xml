<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/silver"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12sp">
            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:src="@drawable/dark_back"
                android:background="@null"
                android:padding="6sp"/>
            <TextView android:id="@+id/transfer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transfer_title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="12sp"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/silver"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/field_padding"
            android:paddingTop="6sp"
            android:paddingBottom="6sp">
            <TextView android:id="@+id/label_account_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_account_number"
                android:labelFor="@+id/EditTextName"
                android:textSize="12sp"
                android:textColor="@color/silver" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/edit_text_account_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/active_field"
                    android:hint="@string/edit_text_account_number"
                    android:inputType="textPersonName"
                    android:textSize="20sp"
                    android:textColorHint="@color/silver"
                    android:textColor="@color/colorPrimaryDark" />
                <Button
                    android:id="@+id/button_paste_account_no"
                    android:layout_width="24sp"
                    android:layout_height="24sp"
                    android:background="@drawable/icon_paste"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/field_padding"
            android:orientation="vertical"
            android:paddingTop="6sp"
            android:paddingBottom="6sp">
            <TextView android:id="@+id/label_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_amount"
                android:labelFor="@+id/EditTextName"
                android:textSize="12sp"
                android:textColor="@color/silver" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/idr_text"
                        android:hint="IDR"
                        android:inputType="textPersonName"
                        android:textSize="20sp"
                        android:layout_marginRight="6sp"
                        android:textColorHint="@color/silver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark" />
                    <TextView
                        android:id="@+id/edit_amount_transfer"
                        android:hint="@string/edit_text_amount"
                        android:inputType="textPersonName"
                        android:textSize="20sp"
                        android:textColorHint="@color/silver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark" />
                    <Button
                        android:id="@+id/button_paste_amount"
                        android:layout_width="24sp"
                        android:layout_height="24sp"
                        android:background="@drawable/icon_paste"
                        />
                </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/asbestos"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/concrete"
            android:orientation="vertical"
            android:padding="12sp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/button_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1"/>

                <Button
                    android:id="@+id/button_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2"/>

                <Button
                    android:id="@+id/button_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/button_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4"/>

                <Button
                    android:id="@+id/button_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5"/>
                <Button
                    android:id="@+id/button_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="6"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <Button
                    android:id="@+id/button_7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="7"/>

                <Button
                    android:id="@+id/button_8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="8"/>

                <Button
                    android:id="@+id/button_9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="9"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/button_delete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Delete"/>
                <Button
                    android:id="@+id/button_0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"/>
                <Button
                    android:id="@+id/button_next"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Next"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
