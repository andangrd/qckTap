    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="12sp">
            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:src="@drawable/dark_back"
                android:background="@null"/>
            <ImageView
                android:id="@+id/ivKeyboard"
                android:layout_width="160dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="12sp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_quicktap_logo" />
            <TextView android:id="@+id/transfer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transfer_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:id="@+id/label_account_number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/key_height"
                android:text="@string/label_account_number"
                android:labelFor="@+id/EditTextName"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark" />
            <TextView
                android:id="@+id/edit_text_account_number"
                android:layout_height="@dimen/key_height"
                android:layout_weight="3"
                android:hint="@string/edit_text_account_number"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:textColorHint="@color/colorPrimary"
                android:layout_width="0dp"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView android:id="@+id/label_amount"
                android:layout_width="0dp"
                android:layout_height="@dimen/key_height"
                android:layout_weight="1"
                android:text="@string/label_amount"
                android:labelFor="@+id/EditTextName"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark" />
            <TextView
                android:id="@+id/edit_amount_transfer"
                android:layout_height="@dimen/key_height"
                android:hint="@string/edit_text_amount"
                android:background="@drawable/active_field"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:textColorHint="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"/>

            <Button
                android:id="@+id/button_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"/>

            <Button
                android:id="@+id/button_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"/>

            <Button
                android:id="@+id/button_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5"/>
            <Button
                android:id="@+id/button_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7"/>

            <Button
                android:id="@+id/button_8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="8"/>

            <Button
                android:id="@+id/button_9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="9"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete"/>
            <Button
                android:id="@+id/button_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"/>
            <Button
                android:id="@+id/button_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Next"/>

        </LinearLayout>

    </LinearLayout>
<!--</ScrollView>-->